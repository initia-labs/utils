{
  "name": "@initia/utils",
  "version": "2.0.0-alpha.5",
  "description": "TypeScript utility library for Interwoven applications",
  "author": "Initia (https://initia.xyz)",
  "repository": "github:initia-labs/utils",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "alpha"
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --fix",
    "test": "vitest run",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@cosmjs/encoding": "^0.34.0",
    "@mysten/bcs": "^1.7.0",
    "@noble/hashes": "^1.8.0",
    "bignumber.js": "^9.3.1",
    "viem": "^2.33.3"
  },
  "devDependencies": {
    "@initia/eslint-config-react-app": "^1.1.0",
    "@tsconfig/recommended": "^1.0.10",
    "@types/node": "^24.2.1",
    "eslint": "^9.33.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@cosmjs/encoding": ">=0.34.0",
    "@mysten/bcs": ">=1.0.0",
    "@noble/hashes": ">=1.0.0",
    "bignumber.js": ">=9.0.0",
    "viem": ">=2.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
